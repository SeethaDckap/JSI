        <bus_reg_heading_wording>Business Customers</bus_reg_heading_wording>
        <bus_reg_button_wording>Create a Business Account</bus_reg_button_wording>
        <bus_reg_content_wording>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</bus_reg_content_wording>
        <bus_reg_new_or_existing_customer_option>0</bus_reg_new_or_existing_customer_option>
      </registration>
      <customer_account_summary>
        <show_name>1</show_name>
        <show_code>1</show_code>
        <show_credit_limit>1</show_credit_limit>
        <show_balance>1</show_balance>
      </customer_account_summary>
    </epicor_b2b>
    <epicor_search>
      <general><cpn_search_enabled>1</cpn_search_enabled><cpn_search_weight>4</cpn_search_weight><cpn_search_weight_partial>4</cpn_search_weight_partial>&gt;
            </general>
    </epicor_search>

        <b2c_delivery_address_phone_fax>1</b2c_delivery_address_phone_fax>
        <success_message>Account Created Successfully</success_message>
        <customer_success_message>Account Created Successfully</customer_success_message>
        <email_request_success_message>Your request has been logged</email_request_success_message>
        <pre_reg_pswd>0</pre_reg_pswd>
        <b2b_acct_type>guest_acct</b2b_acct_type>
        <allowed_cus_types>B2B Standard Account|B</allowed_cus_types>
        <enable_erp_acct_welcome_email>0</enable_erp_acct_welcome_email>
        <enable_guest_acct_welcome_email>0</enable_guest_acct_welcome_email>
        <enable_guest_to_b2b_welcome_email>0</enable_guest_to_b2b_welcome_email>
        <enable_pre_reg_welcome_email>0</enable_pre_reg_welcome_email>

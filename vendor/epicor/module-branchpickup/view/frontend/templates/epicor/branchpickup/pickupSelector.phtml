                        <?php endif; ?>
                        <?php $display = ""; ?>
                        <?php if ($groupHeader == ""): ?>
                            <?php $groupHeader = $location->getGroupName(); ?>
                            <?php $display = ($location->getGroupExpandable() == 1) ? "display:none;": ""; ?>

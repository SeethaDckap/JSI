<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Epicor\Comm\Block\Adminhtml\Customer\Erpaccount\Edit\Tab\Payments\Form" name="erp_payments_form"/>
        <block class="Epicor\Comm\Block\Adminhtml\Customer\Erpaccount\Edit\Tab\Payments" name="erp_payments_grid"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">row_id</argument>
                <argument name="grid_block" xsi:type="string">erp_payments_grid</argument>
                <argument name="callback" xsi:type="string">getSelected</argument>
                <argument name="input_element_name" xsi:type="string">links[payments]</argument>

<script>
    require(['jquery'],
            function ($) {
                // access rights
                $(document).ready(function () {
                    var accessRights = 'select#erp_access_rights';
                    var accessRoles = 'tr#access_roles_element';
                    if ($(accessRights).val() != 1) {
                        $(accessRoles).hide();
                    }

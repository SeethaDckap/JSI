<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block
            class="Magento\Framework\View\Element\Template"
            name="epicor_comm_product_locations"
            template="Epicor_Comm::epicor_comm/product/locations.phtml"
        >
            <arguments>
                <argument name="productLocations" xsi:type="object">Epicor\Comm\Model\ViewModel\Product\Locations</argument>
                <argument name="formKey" xsi:type="object">Epicor\Comm\Model\ViewModel\Form\FormKey</argument>
                <argument name="addToCartBtn" xsi:type="object">Epicor\Comm\Model\ViewModel\Form\AddToCartButton</argument>
            </arguments>
        </block>
    </referenceContainer>
</page>

<?php
    $_helper = $this->helper('catalog/output');
    $_product = $this->getProduct()
?>
<?php if($_additional = $this->getAdditionalData()): ?>
    <?php  if($this->getTitle() != 'Additional Information'){ ?>
                <h2><?php echo __('Additional Information') ?></h2>
    <?php  }  ?>
    <table class="data-table" id="product-attribute-specs-table">
        <col width="25%" />
        <col />
        <tbody>
        <?php foreach ($_additional as $_data): ?>
            <tr>
                <th class="label"><?php echo $this->htmlEscape(__($_data['label'])) ?></th>
                <td class="data"><?php echo __($_helper->productAttribute($_product, $_data['value'], $_data['code'])) ?></td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('product-attribute-specs-table')</script>
<?php endif;?>

            <?php $cpnCount = count($cpn); ?>
            <?php if ($cpnCount == 1) {  ?>
                <br />
                <?php echo 'Your SKU: ' . $cpn[0]; ?>
            <?php } ?>
            <?php if ($cpnCount > 1) {  ?>
                <?php $cpns = implode(', ', $cpn); ?>
                <?php echo 'Your SKUs: ' . $cpns; ?>
            <?php } ?>
        <?php } ?>

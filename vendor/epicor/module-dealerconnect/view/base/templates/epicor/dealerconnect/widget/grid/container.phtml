?>
<?php if ($block->getButtonsHtml()): ?>
    <div class="page-actions"><?php echo $block->getButtonsHtml() ?></div>
    <?php if ($this->getInventoryTypeCheck() && $dealerHelper->checkCusInventorySearch() != 0): ?>

                }).done(function (data) {
                    $(".action-close").click(); // Close pop modal
                    location.reload(true);
                });
            }
        });
        <?php foreach($sectionsDatas as $section=>$data): ?>
            <?php if ($section == 'summary'): ?>
                <?php continue; ?>
            <?php endif; ?>

                if (this.checked) {
                    $('#<?php echo $data['type']; ?>-containers1').show();
                    $('#enable_<?php echo $data['type']; ?>_grid').val(1);
                } else {
                    $('#<?php echo $data['type']; ?>-containers1').hide();
                    $('#enable_<?php echo $data['type']; ?>_grid').val(0);
                }
            });
        <?php endforeach; ?>
    });
</script>
<?php if($messages === null) : ?>
    <div class="entry-edit box-right" style="width:49%">
        <div class="entry-edit-head admin__page-section-title title"></div>
        <fieldset id="">
            <legend>Message</legend>
            <div class="message"><span><?php echo __("Import Pending"); ?></span></div>
        </fieldset>
    </div>
<?php endif; ?>

<?php if(empty($messages) && is_array($messages)) : ?>
    <div class="entry-edit box-right" style="width:49%">
        <div class="entry-edit-head admin__page-section-title title"></div>
        <fieldset id="">
            <legend>Message</legend>
            <div class="message message-success success"><span><?php echo __("Import Success"); ?></span></div>
        </fieldset>
    </div>
<?php endif; ?>

<?php if(isset($messages["errors"])) : ?>
    <div class="entry-edit box-right" style="width:49%">
        <div class="entry-edit-head admin__page-section-title title"></div>
        <fieldset id="">
            <legend>Message Error</legend>
            <?php foreach($messages["errors"] as $error) : ?>
                <div class="message message-error error"><span><?php echo $error; ?></span></div>
            <?php endforeach; ?>
        </fieldset>
    </div>
<?php endif; ?>

<?php if(isset($messages["warnings"])) : ?>
<div class="entry-edit box-right" style="width:49%">
    <div class="entry-edit-head admin__page-section-title title"></div>
    <fieldset id="">
        <legend>Message Warnings</legend>
            <?php foreach($messages["warnings"] as $warning) : ?>
                <div class="message message-warning warning"><span><?php echo $warning; ?></span></div>
            <?php endforeach; ?>
    </fieldset>
</div>
<?php endif; ?>
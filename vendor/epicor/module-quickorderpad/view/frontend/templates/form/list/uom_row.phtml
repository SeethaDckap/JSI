        <?php if (($_product->getTypeId() != 'grouped') || ($loopProduct->getEccPackSize() != '' && $_product->getEccStkType() == 'grouped')) : ?>                
            <?php echo __($this->escapeHtml($loopProduct->getEccPackSize() ? : $_product->getEccDefaultUom())) ?>

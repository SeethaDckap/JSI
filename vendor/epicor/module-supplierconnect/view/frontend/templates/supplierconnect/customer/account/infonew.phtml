?><div class="box-info box-account <?php echo ($this->getOnRight()) ? 'col-2' : ($this->getOnLeft() ? 'col-1' : 'col-full'); ?>  block">
    <div class="block-title">
        <strong><?php echo $this->getTitle(); ?></strong>
    </div>
    <div class="info-list col-count-<?php echo $this->getColumnCount(); ?>">
        <?php foreach ($this->getInfoData() as $key => $value): ?>
            <?php $linkToActive = $this->getLinkTo()[$key]['active'] ?? '';
            $linkToLink = $this->getLinkTo()[$key]['link'] ?? '';
            $dataValue = $value['value'] ?? '';
            $header = $value['header'] ?? ''; ?>
            <p id="<?php echo $key; ?>">
                <?php if (!empty($key)) : ?>
                    <span class="label"><?php echo $header; ?>:</span>
                <?php endif; ?>
                <?php if (isset($linkToActive)) { ?>
                    <?php echo '<a href="' . $linkToLink . '">'; ?>
                <?php } ?>
                <span class="value"><?php echo $dataValue; ?></span>
                <?php if (isset($linkToActive)) { ?>
                    <?php echo '</a>'; ?>
                <?php } ?>
            </p>
        <?php endforeach; ?>
    </div>
    <div class="info-list-extra">
        <?php foreach ($this->getExtraData() as $label => $value): ?>
            <?php $linkToActive = $this->getLinkTo()[$label]['active'] ?? '';
            $linkToLink = $this->getLinkTo()[$label]['link'] ?? ''; ?>
            <p id="<?php echo $label; ?>">
                <?php if (!empty($label)) : ?>
                    <span class="label"><?php echo $label; ?></span>
                <?php endif; ?>
                <?php if (isset($linkToActive)) { ?>
                    <?php echo '<a href="' . $linkToLink . '">'; ?>
                <?php } ?>
                <span class=""><?php echo $value; ?></span>
                <?php if (isset($linkToActive)) { ?>
                    <?php echo '</a>'; ?>
                <?php } ?>
            </p>
        <?php endforeach; ?>
    </div>
</div>
